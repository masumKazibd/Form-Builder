@{
    ViewData["Title"] = "Create New Form";
}

<h2>Create a New Form</h2>

<form id="createForm">
    <div class="form-group">
        <label for="formTitle">Form Title</label>
        <input type="text" id="formTitle" name="FormTitle" class="form-control" placeholder="Enter Form Title...">
    </div>

    <hr />

    <div id="dynamic-fields-container">
    </div>

    <hr />

    <button type="button" id="add-more-btn" class="btn btn-secondary">Add More</button>
    <button type="submit" class="btn btn-primary">Save Form</button>
</form>
@section Scripts {
    <script>
        $(document).ready(function () {

            let fieldIndex = 0;

            $('#add-more-btn').on('click', function () {
                var newFieldHtml = `
                    <div class="form-row mb-3" id="field-row-${fieldIndex}">
                        <div class="col-md-8">
                            <input type="text" name="Fields[${fieldIndex}].Label" class="form-control" placeholder="Enter Field Label" required />
                        </div>
                        <div class="col-md-3">
                            <div class="form-check">
                                <input type="checkbox" name="Fields[${fieldIndex}].IsRequired" value="true" class="form-check-input" />
                                <label class="form-check-label">Is Required</label>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-danger btn-sm remove-btn" data-row-id="field-row-${fieldIndex}">X</button>
                        </div>
                    </div>`;

                $('#dynamic-fields-container').append(newFieldHtml);

                fieldIndex++;
            });

            $(document).on('click', '.remove-btn', function () {
                var rowId = $(this).data('row-id');
                $('#' + rowId).remove();
            });

            $('#createForm').on('submit', function (e) {
                e.preventDefault(); // ডিফল্ট পেজ রিলোড বন্ধ করুন

                var formData = {
                    formTitle: $('#formTitle').val(),
                    fields: []
                };

                // ডাইনামিক ফিল্ডগুলো থেকে ডেটা সংগ্রহ করুন
                $('#dynamic-fields-container .form-row').each(function(index, row) {
                    var label = $(row).find('input[type="text"]').val();
                    var isRequired = $(row).find('input[type="checkbox"]').is(':checked');
                    formData.fields.push({ label: label, isRequired: isRequired });
                });

                // AJAX POST রিকোয়েস্ট পাঠান
                $.ajax({
                    url: '/api/FormsApi',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(formData),
                    success: function (response) {
                        alert(response.message); // সফল বার্তা দেখান
                        window.location.href = '/FormBuilder/Index'; // তালিকা পেজে পাঠান
                    },
                    error: function () {
                        alert('Error: Could not save the form.');
                    }
                });
            });
        });
    </script>
}