@model int

<div class="form-row mb-3" id="field-row-@Model">
    <div class="col-md-8">
        <input type="text" name="Fields[@Model].Label" class="form-control" placeholder="Enter Field Label" required />
    </div>
    <div class="col-md-3">
        <div class="form-check">
            <input type="checkbox" name="Fields[@Model].IsRequired" value="true" class="form-check-input" />
            <label class="form-check-label">Is Required</label>
        </div>
    </div>
    <div class="col-md-1">
        <button type="button" class="btn btn-danger btn-sm remove-btn" data-row-id="field-row-@Model">X</button>
    </div>
</div>